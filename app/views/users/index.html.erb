<p id="notice"><%= notice %></p>

<h1>Пользователи</h1>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Имя</th>
        <th>Описание</th>
        <th>Количество объектов</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.description %></td>
        <td><%= user.things.count %></td>
        <td><%= link_to 'Show', user, class: "btn btn-primary" %>
          <% if current_user?(user) %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
      <% end %>
      
    </tbody>
  </table>
